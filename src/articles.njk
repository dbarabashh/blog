---
layout: base.njk
title: All Articles
permalink: /articles/
---
<nav class="post-nav" aria-label="Page navigation">
    <a href="/" class="back-link" aria-label="Back to home page">&larr; Back to Home</a>
</nav>

<section class="articles-section" aria-labelledby="articles-heading">
    <h1 id="articles-heading">All Articles</h1>
    
    {% set postslist = collections.posts | reverse %}
    
    <ul class="posts-list">
    {% for post in postslist %}
        <li class="post-item">
            <article>
                <h2 class="post-title">
                    <a href="{{ post.url }}">{{ post.data.title }}</a>
                </h2>
                <time datetime="{{ post.date | formatDate }}">{{ post.date | formatDate }}</time>
                {% if post.data.description %}
                    <p class="post-description">{{ post.data.description }}</p>
                {% endif %}
            </article>
        </li>
    {% endfor %}
    </ul>
</section>
