---
layout: base.njk
---

<nav class="post-nav" aria-label="Post navigation">
  <a href="/" class="back-link" aria-label="Back to home page">&larr; Back to Home</a>
</nav>

<article class="post">
  <header class="post-header">
    <h1>{{ title }}</h1>
    <time datetime="{{ page.date | formatDate }}">{{ page.date | formatDate }}</time>
  </header>

  <div class="post-content">{{ content | safe }}</div>
</article>
